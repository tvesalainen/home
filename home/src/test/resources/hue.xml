<?xml version="1.0" encoding="UTF-8"?>
<hue>
    <lights>
        <level>
            <point time="00:00" value="10" />
            <point time="03:00" value="10" />
            <point time="06:00" value="30" />
            <point time="09:00" value="80" />
            <point time="12:00" value="100" />
            <point time="15:00" value="80" />
            <point time="18:00" value="30" />
            <point time="21:00" value="10" />
        </level>
        <temperature>
            <point time="00:00" value="500" />
            <point time="03:00" value="500" />
            <point time="06:00" value="300" />
            <point time="09:00" value="200" />
            <point time="12:00" value="150" />
            <point time="15:00" value="200" />
            <point time="18:00" value="300" />
            <point time="21:00" value="500" />
        </temperature>
        <light name="Living room" target="20000" sensor="Living room group"/>
        <light name="Library" target="20000" sensor="Living room motion 2">
            <dim name="Living room" dim="50"/>
        </light>
        <light name="Bedroom" target="20000" sensor="Bedroom motion"/>
        <light name="Hallway" target="20000" sensor="Hallway motion"/>
        <light name="Bathroom" target="20000" sensor="Bathroom motion"/>
        <mdns dn="_display._tcp.local">
            <dim name="Living room" dim="50"/>
        </mdns>
    </lights>
    <motions>
        <enter>
            <on name="Sockets" />
            <on name="Humifier" />
        </enter>
        <motion name="Living room group">
            <action name="Living room" delay="1 m" />
            <exit>
                <on name="Living room"/>
            </exit>
        </motion>
        <motion name="Bedroom motion">
            <action name="Bedroom" delay="1 m" />
            <exit>
                <off name="Lights"/>
                <off name="Sockets" delay="30 m"/>
            </exit>
        </motion>
        <motion name="Bathroom motion">
            <action name="Bathroom" delay="1 m" />
        </motion>
        <motion name="Hallway motion">
            <action name="Hallway" delay="1 m" />
            <exit>
                <off name="Lights" delay="5 m" />
                <off name="Sockets" delay="5 m" />
                <off name="Humifier" delay="5 m" />
            </exit>
        </motion>
    </motions>
</hue>
