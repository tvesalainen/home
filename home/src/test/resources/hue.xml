<?xml version="1.0" encoding="UTF-8"?>
<hue>
    <motions>
        <enter>
            <device name="Sockets" />
            <device name="Humifier" />
        </enter>
        <motion name="Living room group">
            <light name="Living room" />
            <exit>
                <light name="Living room" action="true"/>
            </exit>
        </motion>
        <motion name="Bedroom motion">
            <light name="Bedroom" />
            <exit>
                <device name="Lights" />
            </exit>
        </motion>
        <motion name="Bathroom motion">
            <light name="Bathroom" />
        </motion>
        <motion name="Hallway motion">
            <light name="Hallway" />
            <exit>
                <light name="Lights" />
                <device name="Sockets" />
                <device name="Humifier" />
            </exit>
        </motion>
    </motions>
</hue>
